<h2><%= @cocktail.name %></h2>

<ul class="list-group">
  <% @cocktail.doses.each do |dose|%>
    <li class="list-group-item"><%= dose.ingredient.name %></li>
    <li class="list-group-item"><%= dose.description %></li>
    <%= link_to "Delete",
             dose_path(dose),
             method: :delete,
             data: { confirm: "Are you sure?" } %>
    <% end %>
</ul>

<%=link_to "Back to list", cocktails_path%> |

<%= link_to "Add a new ingredient", new_cocktail_dose_path(@cocktail) %>


