<div class="card-product">
  <img src="<%= @cocktail.image_url %>" alt="<%=@cocktail.name%>"/>
  <div class="card-product-infos">
    <h2><%= @cocktail.name %></h2>
      <% @cocktail.doses.each do |dose|%>
        <%= dose.ingredient.name %>
        <%= dose.description %>
        <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" }, class: 'card-remove-link' do %>
          <i class="fas fa-trash"></i>
        <% end %>
      <% end %>
  </div>
</div>


<%=link_to "Back to list", cocktails_path%> |

<%= link_to "+ Add a new ingredient", new_cocktail_dose_path(@cocktail) %>
